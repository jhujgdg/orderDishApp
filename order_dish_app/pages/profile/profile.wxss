.user-container {
  padding: 20rpx;
  background-color: #f5f6fa;
  min-height: 100vh;
  background-image: url('https://bpic.588ku.com/back_pic/19/03/26/3d1a24b0de1224e08aa3214630f70607.jpg');
  background-size: cover; 
  background-position: center; 
}

.user-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  display: block;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.user-info-list {
  font-size: 28rpx;
  color: #333;
}

.info-item {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.edit-btn,
.logout-btn {
  font-size: 30rpx;
  border-radius: 12rpx;
}
