<view class="user-container">
  <view class="user-card">
    <image class="avatar" src="{{user.avatarUrl || '/utils/images/avatar.png'}}" />
    <view class="user-info-list">
      <view class="info-item">用户名：{{user.username}}</view>
      <view class="info-item">手机号：{{user.phone}}</view>
      <view class="info-item">邮箱：{{user.email}}</view>
      <view class="info-item">性别：{{user.gender}}</view>
      <view class="info-item">出生日期：{{user.birthDate}}</view>
    </view>
  </view>

  <view class="button-group">
    <button class="edit-btn" type="primary" bindtap="editInfo">编辑信息</button>
    <button class="logout-btn" type="warn" bindtap="logout">退出登录</button>
  </view>
</view>
