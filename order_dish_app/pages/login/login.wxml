<view class="container">
  <view class="login-form">
    <!-- 输入框：手机号或邮箱 -->
    <view class="login-item">
      <input class="input" type="text" placeholder="请输入手机号或邮箱" bindinput="onIdentifierInput" />
    </view>

    <!-- 输入框：密码 -->
    <view class="login-item">
      <input class="input" type="password" placeholder="请输入密码" bindinput="onPasswordInput" />
    </view>

    <!-- 登录按钮 -->
    <button class="login-button" bindtap="onLogin">登录</button>

    <!-- 注册链接 -->
    <view class="register-link" bindtap="goToRegister">
      没有账号? <text class="register-text">注册</text>
    </view>
  </view>
</view>
