.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  background-image: url('https://bpic.588ku.com/back_pic/19/03/26/3d1a24b0de1224e08aa3214630f70607.jpg'); /* 添加背景图片 */
  background-size: cover; /* 背景图片覆盖整个容器 */
  background-position: center; /* 背景居中 */
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.upload-tip {
  font-size: 24rpx;
  color: #888;
  margin-top: 16rpx;
}

.section-title {
  font-weight: bold;
  font-size: 30rpx;
  margin: 40rpx 0 20rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  display: block;
  color: #444;
}

.input {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  margin-top: 40rpx;
  font-size: 30rpx;
  border-radius: 12rpx;
}
