.comment-container {
  padding: 20rpx;
}

.star-rating {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.star-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 5rpx;
}

.comment-input textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ccc;
  padding: 10rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  background-color: #4CAF50;
  color: white;
}
